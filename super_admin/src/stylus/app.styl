body .hidden {
    display: none;
}
body .text-right {
    text-align: right ;
}
body .text-center {
    text-align: center ;
}
.v-list__group__header.v-list__group__header--active {
    border-left: 4px solid #fff;
    background: rgba(255,255,255,0.08);
}
.v-list__group__header.v-list__group__header--active > .v-list__group__header__prepend-icon {
    margin-left: -4px;
}
.v-navigation-drawer .v-list__group__items > div.list__active {
    position: relative;
    background: rgba(255,255,255,0.08);
}
.v-navigation-drawer .v-list__group__items > div.list__active:before {
    content: '';
    border-left: 4px solid #fff;
    position: absolute;
    height: 100%; 
}
.v-navigation-drawer__border {
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    width: 0px;
}
.sidebar-background {
    position: absolute;
    z-index: -1;
    height: 100%;
    width: 100%;
    display: block;
    top: 0;
    left: 0;
    background-size: cover;
    background-position: 50%;
}
.sidebar-background:after {
    position: absolute;
    z-index: 3;
    width: 100%;
    height: 100%;
    content: "";
    display: block;
    opacity: 0.7;
    background: #1f1f1f;
}
.v-navigation-drawer .v-list {
    background: transparent;
}
.v-navigation-drawer .theme--dark.v-icon,
.v-navigation-drawer.theme--dark .v-list__tile__title {
    color: #aaa !important;    
}
body .v-navigation-drawer > .v-list .v-list__tile--active .v-list__tile__title,
body .v-navigation-drawer.theme--dark .v-list__group__header--active .v-list__tile__title,
body .v-navigation-drawer .v-list__tile--active .theme--dark.v-icon,
body .v-navigation-drawer .v-list__group__header--active .theme--dark.v-icon {
    color: #fff !important;
}
body .v-navigation-drawer.theme--dark .v-list__group__items > div.list__active {
    background: rgba(255,255,255,0.08);
}

body .v-navigation-drawer.theme--dark .v-list__group__items {
    max-height: 500px;
    overflow-y: auto;
}
.grid-list .layout .flex {
    padding: 4px;
}
body .cm-s-base16-light span.cm-string {
    color: #0064c7;
}
body .CodeMirror-gutters {
    z-index: 2;
}
body .v-card .v-toolbar {
    z-index: 1;
}
.v-treeview-node__root {display: flex;
    align-items: center;
    min-height: 34px;}
.v-treeview-node__content {    display: flex;
    flex-grow: 1;
    flex-shrink: 0;
    align-items: center;}
.v-treeview-node--leaf {margin-left: 50px;}